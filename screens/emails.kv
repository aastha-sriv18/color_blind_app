<EmailsScreen>:
    name: "emails"
 
    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: "10dp"
        allow_stretch: True
        size_hint_y: 1

        MDLabel:
            text: "Email Accessibility Tool"
            halign: "center"
            font_style: "H5"
            size_hint_y: None
            height: "40dp"

        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: 1
            
            MDRoundFlatIconButton:
                text: "Upload Image"
                icon: "folder-image"
                size_hint: (None, None)
                pos_hint: {'center_x': 0.5}
                on_release: root.extract_text_mlkit("/sdcard/Download/email_image.jpg")
                
            MDLabel:
                text: "OR"
                font_size: "15sp"
                bold: True
                color : 0,0,0,1
                halign: "center"           

            MDLabel:  
                text: "Paste Email Text"
                color : 0,0,0,1
                halign: "center"

            TextInput:
                id: email_input
                hint_text: "Paste your email HTML/text here..."
                multiline: True
                size_hint_y: 1 
                adaptive_height: True
                allow_stretch: True
                keep_ratio: True

        Button:
            text: "Convert to Readable Format"
            size_hint_y: None
            height: "50dp"
            background_color: 0,0,255,1
            on_release: root.process_html_text(root.ids.email_input.text)
  
       
            
        ScrollView:
            size_hint_y: 0.5
            TextInput:
                text: ""
                id: output_text
                font_size: "16sp"
                halign: "center"
                theme_text_color: "Primary"
                md_bg_color: 0.9, 0.9, 0.9, 1
                radius: [10, 10, 10, 10]
                elevation: 1
                padding: "10dp"